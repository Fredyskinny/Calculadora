<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_alignParentBottom="@dimen/activity_vertical_margin"
    android:layout_alignParentLeft="@dimen/activity_vertical_margin"
    android:layout_alignParentRight="@dimen/activity_vertical_margin"
    android:layout_alignParentTop="@dimen/activity_vertical_margin"
    android:stretchColumns="*"
    tools:context="com.example.fredy.calculadoraclases.CalculadoraActivity">

    <TableRow
        android:layout_weight="1">
    <TextView
        android:id="@+id/txt1"
        android:layout_height="match_parent"
        android:background="#01A9DB"
        android:text="0"
        android:layout_width="match_parent"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:layout_span="4"
        android:layout_weight="1"
        android:gravity="right|center_vertical"

        />
    </TableRow>
    <TableRow
        android:layout_weight="1">
        <Button
            android:id="@+id/btnBorrar"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="AC"
            android:layout_weight="1"


            />
        <Button
            android:id="@+id/btnCambioSigno"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="+/-"
            android:layout_weight="1"

            />
        <Button
            android:id="@+id/btnPorc"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="%"
            android:layout_weight="1"

            />
        <Button
            android:id="@+id/btnDivision"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="/"
            android:backgroundTint="#FF8F27"
            android:layout_weight="1"

            />
    </TableRow>

    <TableRow
        android:layout_weight="1">
        <Button
            android:id="@+id/btn7"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="7"

            android:layout_weight="1" />
        <Button
            android:id="@+id/btn8"
            android:gravity="center"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="8"

            android:layout_weight="1" />
        <Button
            android:id="@+id/btn9"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="9"

            android:layout_weight="1" />
        <Button
            android:id="@+id/btnX"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="X"
            android:backgroundTint="#FF8F27"

            android:layout_weight="1" />
    </TableRow>

    <TableRow
        android:layout_weight="1">
        <Button
            android:id="@+id/btn4"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="4"
            android:layout_weight="1"

            />
        <Button
            android:id="@+id/btn5"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="5"
            android:layout_weight="1"

            />
        <Button
            android:id="@+id/btn6"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="6"
            android:layout_weight="1"

            />
        <Button
            android:id="@+id/btnMenos"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="-"
            android:layout_weight="1"
            android:backgroundTint="#FF8F27"

            />
    </TableRow>

    <TableRow
        android:layout_weight="1">
        <Button
            android:id="@+id/btn1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1"
            android:layout_weight="1"

            />
        <Button
            android:id="@+id/btn2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2"
            android:layout_weight="1"

            />
        <Button
            android:id="@+id/btn3"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="3"
            android:layout_weight="1"

            />
        <Button
            android:id="@+id/btnsuma"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#FF8F27"
            android:text="+"
            android:layout_weight="1"

            />
    </TableRow>

    <TableRow
        android:layout_weight="1"
        >
        <Button
            android:id="@+id/btn0"
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="2"
            android:layout_weight="1"


            />
        <Button
            android:id="@+id/btnPunto"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="."
            android:layout_weight="1"

            />
        <Button
            android:id="@+id/btnIgual"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="="
            android:backgroundTint="#FF8F27"
            android:layout_weight="1"

            />


    </TableRow>
</TableLayout>
